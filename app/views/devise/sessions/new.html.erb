<div class="container">
	<div class="row-fluid">
      <div class="span4 offset5 well">
	<legend>Sign in to <%= link_to "Tutr", root_url %></legend>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class='clearfix'>
	    <%= f.email_field :email, :placeholder => 'Email', :autofocus => true %>
	  </div>
	  <div class='clearfix'>
	    <%= f.password_field :password, :placeholder => 'Password' %>
	  </div>
	  <% if devise_mapping.rememberable? -%>
	    <label class='checkbox'><%= f.check_box :remember_me %> Remember me</label>
	  <% end -%>

	  <div><%= f.submit "Sign in", :class => 'btn primary' %></div>
	<% end %>

	<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
