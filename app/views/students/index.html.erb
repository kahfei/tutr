
<div class="row-fluid">

<table class="table table-hover">
<thead>
<tr>
	<th>Name</th>
	<th>School</th>
	<th>Total Fee</th>
	<th>Subjects</th>
	<th></th>
	<th></th>
</tr>
</thead>
<tbody>
<tr>
	<% @students.each do |student| %>
	<td><%= link_to "#{student.name}", student_path(student) %></td>
	<td><%= student.school %></td>
	<td><%= student.total_fee %></td>
	<td><% student.subjects.each do |subject| %>
		<li><%= subject.name %></li>
	<% end %></td>
	<td><%= link_to "Delete",
				student,
				:class => 'btn btn-small btn-danger',
				:method => :delete %></td>
</tr>
</tbody>
<% end %>
</table>





</div>