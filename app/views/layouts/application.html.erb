<!DOCTYPE html>
<html>
<head>
  <title>Tutr</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
  <div class="navbar-inner">
    <%= link_to "Tutr", root_url, :class => 'brand' %>
    <% if user_signed_in? %>
      <%= render 'layouts/header' %>
    <% end %>
  </div>
</div>

<%= yield %>

</body>
</html>
