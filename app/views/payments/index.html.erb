<table class="table table-hover">
	<thead>
	<tr>
		<th>Payment</th>
		<th>Student</th>
		<th>Amount</th>
		<th></th>
	</tr>
    </thead>
	<tbody>
	<tr>
		<% @payments.each do |payment| %>
		<td><%= link_to "#{payment.id}", edit_payment_path(payment) %></td>
		<td><%= payment.student.name %></td>
		<td><%= payment.amount %></td>
		<td>
	<%= link_to "Delete",
				payment,
				:method => :delete %></td>
	</tr>
    </tbody>


<% end %>